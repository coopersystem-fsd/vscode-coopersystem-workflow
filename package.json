{
  "name": "coopersystem-workflow",
  "displayName": "Coopersystem Workflow",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onCommand:coopersystemWorkflow.createTimeEntry",
    "onView:coopersystem-workflow",
    "onView:coopersystem-workflow-quick-time-entry"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "coopersystemWorkflow.createTimeEntry",
        "title": "Create time entry",
        "icon": "$(check)"
      }
    ],
    "views": {
      "coopersystem-workflow": [
        {
          "type": "webview",
          "id": "coopersystem-workflow-allocation",
          "name": "Allocation"
        },
        {
          "type": "webview",
          "id": "coopersystem-workflow-quick-time-entry",
          "name": "Quick Time Entry"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "title": "Coopersystem",
          "id": "coopersystem-workflow",
          "name": "Coopersystem",
          "icon": "IconCooper.svg"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "coopersystemWorkflow.createTimeEntry",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "coopersystemWorkflow.createTimeEntry",
          "when": "view == 'coopersystem-workflow-quick-time-entry'",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Coopersystem Workflow Integration",
      "properties": {
        "coopersystem.ldap.username": {
          "type": "string",
          "description": "Your LDAP username"
        },
        "coopersystem.ldap.password": {
          "type": "string",
          "description": "Your LDAP password"
        },
        "coopersystem.userType": {
          "type": "string",
          "default": "coWorker",
          "enum": [
            "coWorker",
            "intern"
          ],
          "enumDescriptions": [
            "Define user as CoWorker",
            "Define user as Intern"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "prettier": "2.1.2",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@coopersystem-fsd/workflow-sdk": "^0.3.2",
    "execa": "^4.1.0"
  }
}
